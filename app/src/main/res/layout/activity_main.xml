<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="25dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/horizontalReferenceLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/verticalReferenceLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!--Sex Selector Start-->
    <androidx.cardview.widget.CardView
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        app:cardUseCompatPadding="true"
        android:layout_alignEnd="@id/verticalReferenceLine">
        <!-- Male button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Male"
            android:textSize="25sp"
            android:background="" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        app:cardUseCompatPadding="true"
        android:layout_alignStart="@id/verticalReferenceLine">
        <!-- Female button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Female"
            android:textSize="25sp"
            android:background="" />
    </androidx.cardview.widget.CardView>
    <!--Sex Selector End-->

    <!--    Height Card Start-->
    <androidx.cardview.widget.CardView
        android:id="@+id/heightCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        android:layout_marginBottom="-50dp"
        android:layout_alignBottom="@id/horizontalReferenceLine">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/heightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/heightTextGroup"
                android:layout_below="@id/heightLabel"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/heightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textSize="50sp"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textSize="40sp"
                    android:textColor="#FFF" />
            </LinearLayout>

            <SeekBar
                android:layout_below="@id/heightTextGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <!--    Height Card End -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        android:layout_alignEnd="@id/verticalReferenceLine"
        android:layout_below="@id/heightCard"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/WeightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textSize="50sp"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="40sp"
                    android:textColor="#FFF" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Less" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        android:layout_alignStart="@id/verticalReferenceLine"
        android:layout_below="@id/heightCard"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/ageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textSize="50sp"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yrs"
                    android:textSize="40sp"
                    android:textColor="#FFF" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Less" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />
</RelativeLayout>
