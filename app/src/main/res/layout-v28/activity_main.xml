<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="25dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/horizontalReferenceLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:id="@+id/verticalReferenceLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/heightCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/card_bg_color"
        android:layout_marginBottom="-50dp"
        android:layout_alignBottom="@id/horizontalReferenceLine"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/heightLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/heightTextGroup"
                android:layout_below="@id/heightLabel"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/heightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textSize="50sp"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textSize="40sp"
                    android:textColor="#FFF"
                    />
            </LinearLayout>
            <SeekBar
                android:layout_below="@+id/heightTextGroup"
                android:margin_top="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:outlineAmbientShadowColor="@color/teal_200"
                >

            </SeekBar>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>


